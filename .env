# Docker Compose Environment Configuration
# Copy this to .env to customize your development environment

# Service Ports
API_PORT=8787
FRONTEND_PORT=5173

# Database Configuration
DB_PATH=/data/shumilog.db
DATABASE_URL=file:/data/shumilog.db

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://frontend:5173

# Feature Flags
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGS=true
ENABLE_DEV_ENDPOINTS=true

# Docker Volume Names (optional customization)
DB_VOLUME_NAME=shumilog_db_data
BACKEND_VOLUME_NAME=shumilog_backend_node_modules
FRONTEND_VOLUME_NAME=shumilog_frontend_node_modules

# Docker Network Name (optional customization)
NETWORK_NAME=shumilog_network