# Development Environment Variables
# This file serves as a template for the actual .env file

# Node.js Environment
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=file:/data/shumilog.db
DB_PATH=/data/shumilog.db

# API Configuration
API_PORT=8787
FRONTEND_PORT=5173

# Service URLs
BACKEND_URL=http://backend:8787
FRONTEND_URL=http://frontend:5173

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGS=true
ENABLE_DEV_ENDPOINTS=true

# Docker Configuration
COMPOSE_PROJECT_NAME=shumilog

# Performance Settings
STARTUP_TIMEOUT=30
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Volumes
DB_VOLUME=shumilog_db_data
BACKEND_NODE_MODULES=shumilog_backend_node_modules
FRONTEND_NODE_MODULES=shumilog_frontend_node_modules