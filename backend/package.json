{
  "name": "shumilog-backend",
  "version": "1.0.0",
  "description": "Backend API for Hobby Content Log Service",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "db:schema": "wrangler d1 execute shumilog-db --file=src/db/schema.sql",
    "db:seed": "wrangler d1 execute shumilog-db --file=src/db/seeds.sql"
  },
  "dependencies": {
    "@hono/node-server": "^1.2.0",
    "hono": "^4.0.0",
    "marked": "^9.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/coverage-v8": "^0.34.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "miniflare": "^3.20230717.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0",
    "vitest": "^0.34.0",
    "vitest-environment-miniflare": "^2.14.4",
    "wrangler": "^3.10.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
